<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    android:orientation="vertical"
    tools:context=".about">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:text="About App"
        android:textColor="#3E3A3A"
        android:textStyle="bold"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="125dp"
        android:layout_height="92dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/aaaaa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:text="@string/abouts"
        android:textAlignment="viewStart"
        android:textColor="#0E0E0E"
        android:textSize="15dp"
        android:textStyle="bold|italic" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:text="Contact"
        android:textStyle="bold"
        android:textColor="#151414"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:autoLink="all"
        android:clickable="true"
        android:text="Email:abinshibuthomas67@gamil.com
                                          Linkedin: https://www.linkedin.com/in/abin-shibu-thomas-5a7a2119a/
"
        android:textColor="#0E0E0E"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:text="Attributes"
        android:textColor="#171717"
        android:textSize="25dp" />

    <ListView
        android:id="@+id/listattr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:horizontalSpacing="3dp"
        android:scrollingCache="true"
        android:smoothScrollbar="true"
        android:stretchMode="columnWidth"
        android:verticalSpacing="3dp">


    </ListView>


</LinearLayout>



